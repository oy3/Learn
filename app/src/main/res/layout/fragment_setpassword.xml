<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>

    </data>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="Set Password"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView5" android:layout_marginTop="150dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="44dp"/>
        <TextView
                android:text="Set a new password for your learn account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView7"
                app:layout_constraintTop_toBottomOf="@+id/textView5"
                app:layout_constraintStart_toStartOf="@+id/textView5"
                android:layout_marginTop="15dp"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:background="@drawable/text_box_colour"
                android:hint="Enter password here..."
                android:textAppearance="@style/txtGray"
                android:ems="10"
                android:paddingStart="20dp"
                android:paddingEnd="20dp" android:id="@+id/editText"
                app:layout_constraintTop_toBottomOf="@+id/textView7"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="40dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="40dp"
                android:layout_marginTop="65dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:background="@drawable/text_box_colour"
                android:hint="Re-enter password here..."
                android:textAppearance="@style/txtGray"
                android:ems="10"
                android:paddingStart="20dp"
                android:paddingEnd="20dp" app:layout_constraintTop_toBottomOf="@+id/editText"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="40dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="40dp"
                android:layout_marginTop="16dp"
                android:id="@+id/editText2"/>
        <Button
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:id="@+id/signin"
                android:background="@drawable/bg"
                android:text="Set Password"
                android:textAppearance="@style/btnWhite"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editText2" android:layout_marginTop="30dp"/>
        <TextView
                android:text="Skip"
                android:textColor="@color/sign_in"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="47dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</layout>